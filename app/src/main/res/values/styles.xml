<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar and Text Styles -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog Styles -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MovieApp.MediumComponent</item>
    </style>

    <style name="DialogTitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogPositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorError</item>
        <item name="rippleColor">?attr/colorErrorContainer</item>
    </style>

    <style name="DialogNegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.MovieApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.MovieApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.MovieApp.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.MovieApp.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.MovieApp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.MovieApp.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.MovieApp.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.MovieApp.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    
    <style name="Widget.MovieApp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    
    <style name="Widget.MovieApp.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.MovieApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <style name="Widget.MovieApp.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.MovieApp.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>
</resources> 